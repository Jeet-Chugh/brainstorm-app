<Create_Screen>:
    Fill_Page:
        GridLayout:
            cols: 1
            pos_hint: {'top': 1,'x': 0.05}
            size_hint: 0.90,0.08
            Label:
                text: 'Create Idea:'
                bold: True
                font_size: '34dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.92,'x':0.05}
            size_hint: 0.30, 0.06
            Label:
                text: 'Idea Name:'
                bold: True
                font_size: '22dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.91,'x': 0.35}
            size_hint: 0.60,0.045
            TextInput:
                multiline: False
                font_size: '22dp'
                id: idea_name
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.85,'x': 0.05}
            size_hint: 0.30, 0.06
            Label:
                text: 'Category:'
                bold: True
                font_size: '22dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.84,'x': 0.35}
            size_hint: 0.60,0.045
            TextInput:
                multiline: False
                font_size: '22dp'
                id: category_name
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.78,'x': 0.05}
            size_hint: 0.9,0.60
            TextInput:
                id: idea_text
                multiline: True
                font_size: '18dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.16,'x': 0.05}
            size_hint: 0.9,0.06
            Button:
                text: 'Save'
                bold: True
                font_size: '24dp'
                background_normal: ''
                background_color: hex('#373F47')
                on_release: root.save_idea()
