<Create_Category>:
    new_category_name: new_category_name
    Fill_Page:
        GridLayout:
            cols: 1
            pos_hint: {'top': 1,'x': 0.1}
            size_hint: 0.80,0.08
            Label:
                text: 'Create Category'
                font_size: '32dp'
                bold: True
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.90,'x': 0.05}
            size_hint: 0.30,0.08
            Label:
                text: 'Category Name:'
                bold: True
                font_size: '24dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.88,'x':0.42}
            size_hint: 0.53,0.045
            TextInput:
                id: new_category_name
                multiline: False
                font_size: '21dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.82,'x': 0.15}
            size_hint: 0.70,0.06
            Button:
                text: 'Create'
                font_size: '22dp'
                bold: True
                background_normal: ''
                background_color: hex('#373F47')
                on_release: root.create_category()
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.74,'x': 0.1}
            size_hint: 0.80,0.08
            Label:
                text: 'Remove Category'
                font_size: '32dp'
                bold: True
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.64,'x': 0.05}
            size_hint: 0.30,0.08
            Label:
                text: 'Category Name:'
                bold: True
                font_size: '24dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.62,'x':0.42}
            size_hint: 0.53,0.045
            TextInput:
                id: del_category_name
                multiline: False
                font_size: '21dp'
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.54,'x': 0.15}
            size_hint: 0.70,0.06
            Button:
                text: 'Delete'
                font_size: '22dp'
                bold: True
                background_normal: ''
                background_color: hex('#373F47')
                on_release: root.delete_category()
        GridLayout:
            cols: 1
            pos_hint: {'top': 0.46,'x': 0.05}
            size_hint: 0.90,0.05
            Label:
                text: '* This may take a second *'
        GridLayout:
            rows: 2
            pos_hint: {'top': 0.45,'x': 0.1}
            size_hint: 0.8,0.35
            Label:
                text: 'Categories:'
                font_size: '32dp'
                bold: True
            Label:
                text: root.category_string()
                id: category_list
                bold: True
                font_size: '20dp'
                multiline: True


